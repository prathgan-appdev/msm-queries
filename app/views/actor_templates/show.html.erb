<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    DOB
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

</dl>


<h2>Filmography</h2>

<table border="1">



  <tr>
    <th>
      Character
    </th>

    <th>
      Director
    </th>
  </tr>

<% @characters.each do |a_char|%>

	<tr>
    <td>
      <%= a_char.name %>
    </td>

    <td>
    <% m = Movie.where({ :id => a_char.movie_id }).at(0) %>
    <% d = Director.where({ :id => m.director_id }).at(0) %>
      <%= d.name %>
    </td>
  </tr>
	<% end %>

</table>
